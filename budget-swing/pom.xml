<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<prerequisites>
		<maven>2.0.7</maven>
	</prerequisites>


	<modelVersion>4.0.0</modelVersion>
	<artifactId>budget-swing</artifactId>
	<parent>
		<groupId>ch.tkayser.budget</groupId>
		<artifactId>budget-pom</artifactId>
		<relativePath>../budget-pom</relativePath>
		<version>2.0.1-SNAPSHOT</version>
	</parent>

	<name>budget-swing</name>
	<description>Budget Swing client</description>
	<packaging>jar</packaging>

	<dependencies>


		<!-- J2EE -->
		<dependency>
			<groupId>org.apache.geronimo.specs</groupId>
			<artifactId>geronimo-ejb_3.0_spec</artifactId>
		</dependency>
		<dependency>
			<groupId>org.apache.geronimo.specs</groupId>
			<artifactId>geronimo-annotation_1.0_spec</artifactId>
		</dependency>

		<!-- Testing -->
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>ch.tkayser.budget</groupId>
			<artifactId>budget-server</artifactId>
			<version>${project.version}</version>
			<type>ejb-client</type>
		</dependency>

		<!-- Validation -->
		<dependency>
			<groupId>org.hibernate</groupId>
			<artifactId>hibernate-validator</artifactId>
		</dependency>


		<!-- SWING -->
		<dependency>
			<groupId>org.swinglabs</groupId>
			<artifactId>swing-layout</artifactId>
		</dependency>
		<dependency>
			<groupId>org.jdesktop.bsaf</groupId>
			<artifactId>bsaf</artifactId>
		</dependency>
		<dependency>
			<groupId>com.jgoodies</groupId>
			<artifactId>binding</artifactId>
		</dependency>
		<dependency>
			<groupId>org.swinglabs</groupId>
			<artifactId>swingx-core</artifactId>
		</dependency>
		<dependency>
			<groupId>org.swinglabs</groupId>
			<artifactId>swingx-beaninfo</artifactId>
		</dependency>

		<!-- Look and feel -->
		<dependency>
			<groupId>ch.tkayser.budget</groupId>
			<artifactId>lf</artifactId>
		</dependency>


		<dependency>
			<groupId>org.glassfish.main.appclient.client</groupId>
			<artifactId>gf-client-module</artifactId>
			<version>3.1.2</version>
			<exclusions>
				<exclusion>
					<artifactId>flashlight-framework</artifactId>
					<groupId>org.glassfish.main.flashlight</groupId>
				</exclusion>
			</exclusions>
		</dependency>

	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
			</plugin>

			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>2.4.1</version>
				<configuration>
					<descriptors>
						<descriptor>src/assembly/mac_client_bin_assembly.xml</descriptor>
					</descriptors>
					<finalName>budget</finalName>
               		<appendAssemblyId>false</appendAssemblyId>					
				</configuration>
				<executions>
					<execution>
						<id>make-assembly</id> <!-- this is used for inheritance merges -->
						<phase>package</phase> <!-- bind to the packaging phase -->
						<goals>
							<goal>single</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			
		</plugins>
	</build>

</project>
